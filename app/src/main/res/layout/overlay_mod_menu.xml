<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true">

    <androidx.cardview.widget.CardView
        android:id="@+id/mod_menu_container"
        android:layout_width="620dp"
        android:layout_height="340dp"
        android:layout_gravity="center_vertical|start"
        android:layout_marginStart="80dp"
        app:cardBackgroundColor="#F0121212"
        app:cardCornerRadius="16dp"
        app:cardElevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- Sidebar -->
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#1A1A1A"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">

                <!-- App Logo -->
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:src="@mipmap/ic_launcher"
                    android:contentDescription="@string/app_name" />

                <!-- Navigation Items -->
                <TextView
                    android:id="@+id/nav_modules"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="12dp"
                    android:text="@string/mod_menu_modules"
                    android:textColor="#4AE0A0"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:background="?attr/selectableItemBackground"
                    android:drawableStart="@drawable/ic_modules"
                    android:drawablePadding="8dp"
                    android:drawableTint="#4AE0A0" />

                <TextView
                    android:id="@+id/nav_settings"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="12dp"
                    android:text="@string/settings"
                    android:textColor="#AAAAAA"
                    android:textSize="13sp"
                    android:alpha="0.6"
                    android:background="?attr/selectableItemBackground"
                    android:drawableStart="@drawable/ic_settings"
                    android:drawablePadding="8dp"
                    android:drawableTint="#AAAAAA" />

            </LinearLayout>

            <!-- Main Content -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="8dp"
                    android:background="#0D0D0D">

                    <!-- Search Bar -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_search_field"
                        android:paddingStart="10dp"
                        android:paddingEnd="6dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_search"
                            android:tint="#666666" />

                        <EditText
                            android:id="@+id/search_input"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginStart="6dp"
                            android:background="@android:color/transparent"
                            android:hint="@string/mod_menu_search_hint"
                            android:textColorHint="#555555"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:singleLine="true"
                            android:imeOptions="actionSearch"
                            android:inputType="text" />

                        <ImageButton
                            android:id="@+id/btn_clear_search"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_close"
                            android:tint="#666666"
                            android:visibility="gone"
                            android:padding="2dp" />

                    </LinearLayout>

                    <!-- Close Button -->
                    <ImageButton
                        android:id="@+id/btn_close_menu"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/bg_close_button"
                        android:src="@drawable/ic_close"
                        android:tint="#FFFFFF"
                        android:padding="8dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#2A2A2A" />

                <!-- Modules Container -->
                <FrameLayout
                    android:id="@+id/modules_container"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/mods_grid_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:clipToPadding="false" />

                    <!-- Empty State -->
                    <LinearLayout
                        android:id="@+id/empty_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_modules"
                            android:tint="#333333" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/mod_menu_no_mods"
                            android:textColor="#555555"
                            android:textSize="12sp" />

                    </LinearLayout>

                </FrameLayout>

                <!-- Settings Container -->
                <LinearLayout
                    android:id="@+id/settings_container"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/setting_notifications"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_mod_status_disabled"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_notifications"
                            android:tint="#888888" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mod_menu_notifications"
                                android:textColor="#FFFFFF"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="@string/mod_menu_notifications_desc"
                                android:textColor="#888888"
                                android:textSize="11sp" />

                        </LinearLayout>

                        <Switch
                            android:id="@+id/switch_notifications"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:thumbTint="#4AE0A0"
                            android:trackTint="@color/switch_track_color" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/setting_mod_menu_opacity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="vertical"
                        android:background="@drawable/bg_mod_status_disabled"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_modules"
                                android:tint="#888888" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:text="@string/mod_menu_opacity"
                                android:textColor="#FFFFFF"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/text_mod_menu_opacity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100%"
                                android:textColor="#4AE0A0"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <SeekBar
                            android:id="@+id/seekbar_mod_menu_opacity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:max="100"
                            android:min="10"
                            android:progress="100"
                            android:progressTint="#4AE0A0"
                            android:thumbTint="#4AE0A0" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/setting_mod_menu_button_opacity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="vertical"
                        android:background="@drawable/bg_mod_status_disabled"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_leaf_logo"
                                android:tint="#888888" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:text="@string/mod_menu_button_opacity"
                                android:textColor="#FFFFFF"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/text_mod_menu_button_opacity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100%"
                                android:textColor="#4AE0A0"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <SeekBar
                            android:id="@+id/seekbar_mod_menu_button_opacity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:max="100"
                            android:min="0"
                            android:progress="100"
                            android:progressTint="#4AE0A0"
                            android:thumbTint="#4AE0A0" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>
