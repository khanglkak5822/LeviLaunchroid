<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingStart="4dp"
    android:paddingEnd="4dp"
    android:background="@drawable/bg_memory_item">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/label_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFAA00"
            android:textSize="10sp"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/address_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#00DDFF"
            android:textSize="10sp"
            android:fontFamily="monospace" />
    </LinearLayout>

    <EditText
        android:id="@+id/value_edit"
        android:layout_width="70dp"
        android:layout_height="26dp"
        android:textColor="#FFFFFF"
        android:textSize="11sp"
        android:singleLine="true"
        android:inputType="numberDecimal|numberSigned"
        android:imeOptions="actionDone"
        android:background="@drawable/bg_edit_memory_small"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:gravity="center"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <ImageButton
        android:id="@+id/btn_freeze"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="2dp"
        android:background="@android:color/transparent"
        android:src="@android:drawable/ic_lock_lock"
        android:tint="#888888"
        android:contentDescription="@string/memory_editor_freeze" />

    <ImageButton
        android:id="@+id/btn_overlay"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_memory_overlay"
        android:tint="#888888"
        android:contentDescription="@string/memory_editor_overlay" />

    <ImageButton
        android:id="@+id/btn_delete"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@android:color/transparent"
        android:src="@android:drawable/ic_menu_delete"
        android:tint="#FF5555"
        android:contentDescription="@string/memory_editor_delete" />
</LinearLayout>
