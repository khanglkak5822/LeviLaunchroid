<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bg_memory_editor">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/memory_overlay_config_title"
        android:textColor="#00FF88"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/memory_overlay_name"
        android:textColor="#AAAAAA"
        android:textSize="11sp"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@drawable/bg_edit_memory_small"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:hint="@string/memory_overlay_name_hint"
        android:textColorHint="#666666"
        android:singleLine="true"
        android:inputType="text"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/memory_overlay_original_value"
        android:textColor="#AAAAAA"
        android:textSize="11sp"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/edit_original_value"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@drawable/bg_edit_memory_small"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:singleLine="true"
        android:inputType="numberDecimal|numberSigned"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/memory_overlay_new_value"
        android:textColor="#AAAAAA"
        android:textSize="11sp"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/edit_new_value"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@drawable/bg_edit_memory_small"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:hint="@string/memory_overlay_new_value_hint"
        android:textColorHint="#666666"
        android:singleLine="true"
        android:inputType="numberDecimal|numberSigned"
        android:layout_marginBottom="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <CheckBox
            android:id="@+id/checkbox_toggleable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#00FF88" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/memory_overlay_toggleable"
            android:textColor="#CCCCCC"
            android:textSize="12sp"
            android:layout_marginStart="4dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="@string/cancel"
            android:textColor="#AAAAAA"
            android:textSize="12sp"
            android:background="@drawable/bg_btn_memory_secondary"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="@string/save"
            android:textColor="#000000"
            android:textSize="12sp"
            android:background="@drawable/bg_btn_memory"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />
    </LinearLayout>
</LinearLayout>
