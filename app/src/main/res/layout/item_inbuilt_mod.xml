<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/surface"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/inbuilt_mod_icon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center_horizontal"
                android:padding="6dp"
                android:background="@drawable/bg_mod_icon_circle"
                android:tint="@color/primary" />

            <ImageButton
                android:id="@+id/inbuilt_mod_settings"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end|top"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_settings"
                android:padding="2dp"
                android:tint="@color/on_surface"
                android:alpha="0.6"
                android:contentDescription="@string/settings" />

        </FrameLayout>

        <TextView
            android:id="@+id/inbuilt_mod_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textColor="@color/on_surface"
            android:textSize="13sp"
            android:textStyle="bold"
            android:fontFamily="@font/misans"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/inbuilt_mod_description"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="2dp"
            android:gravity="center|top"
            android:textColor="@color/on_surface"
            android:textSize="10sp"
            android:fontFamily="@font/misans"
            android:alpha="0.6"
            android:maxLines="2"
            android:ellipsize="end" />

        <Button
            android:id="@+id/inbuilt_mod_add_button"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="8dp"
            android:minHeight="36dp"
            android:minWidth="0dp"
            android:backgroundTint="@color/primary"
            android:text="@string/add"
            android:textColor="@color/on_primary"
            android:textSize="12sp"
            android:fontFamily="@font/misans"
            android:textAllCaps="false"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
