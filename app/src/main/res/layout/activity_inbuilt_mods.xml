<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <org.levimc.launcher.ui.views.AmoledGlowView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="16dp"
        android:paddingBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/header_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/close_inbuilt_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_down"
                android:rotation="90"
                android:tint="@color/on_surface" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/inbuilt_mods_title"
                android:fontFamily="@font/misans"
                android:textColor="@color/on_surface"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- Mod Menu Toggle -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_mod_menu_toggle"
                android:paddingStart="12dp"
                android:paddingEnd="8dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mod_menu"
                    android:textColor="@color/on_surface"
                    android:textSize="12sp"
                    android:fontFamily="@font/misans"
                    android:layout_marginEnd="8dp" />

                <Switch
                    android:id="@+id/mod_menu_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumbTint="@color/primary"
                    android:trackTint="#555555" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/inbuilt_mods_subtitle"
            android:textColor="@color/on_surface"
            android:textSize="13sp"
            android:fontFamily="@font/misans"
            android:alpha="0.7"
            android:paddingHorizontal="4dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:background="@drawable/card_background"
            android:padding="8dp">

            <TextView
                android:id="@+id/empty_inbuilt_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/no_inbuilt_mods_available"
                android:textColor="@color/on_surface"
                android:textSize="15sp"
                android:fontFamily="@font/misans"
                android:alpha="0.5"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/inbuilt_mods_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:padding="4dp" />

            <!-- Mod Menu Enabled Overlay -->
            <FrameLayout
                android:id="@+id/mod_menu_overlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#CC000000"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@null"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="24dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_mod_menu"
                        android:tint="@color/primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/mod_menu_active_title"
                        android:textColor="@color/primary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/misans" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/mod_menu_active_desc"
                        android:textColor="@color/on_surface"
                        android:textSize="13sp"
                        android:fontFamily="@font/misans"
                        android:alpha="0.7"
                        android:gravity="center"
                        android:maxWidth="280dp" />

                </LinearLayout>

            </FrameLayout>

        </FrameLayout>

    </LinearLayout>
</FrameLayout>
