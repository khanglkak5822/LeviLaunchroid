<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_config">

    <TextView
        android:id="@+id/config_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:paddingBottom="0dp"
        android:textColor="@color/on_surface"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/misans" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        android:background="@color/outline"
        android:alpha="0.3" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:maxHeight="280dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Overlay Button Size -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/overlay_button_size"
                    android:textColor="@color/on_surface"
                    android:textSize="13sp"
                    android:fontFamily="@font/misans" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <SeekBar
                        android:id="@+id/seekbar_button_size"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:min="32"
                        android:max="120"
                        android:progress="48"
                        android:progressTint="@color/primary"
                        android:thumbTint="@color/primary" />

                    <TextView
                        android:id="@+id/text_button_size"
                        android:layout_width="44dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:gravity="center"
                        android:text="48dp"
                        android:textColor="@color/on_surface"
                        android:textSize="12sp"
                        android:fontFamily="@font/misans" />

                </LinearLayout>
            </LinearLayout>

            <!-- Overlay Button Opacity -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/overlay_button_opacity"
                    android:textColor="@color/on_surface"
                    android:textSize="13sp"
                    android:fontFamily="@font/misans" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <SeekBar
                        android:id="@+id/seekbar_button_opacity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:min="0"
                        android:max="100"
                        android:progress="100"
                        android:progressTint="@color/primary"
                        android:thumbTint="@color/primary" />

                    <TextView
                        android:id="@+id/text_button_opacity"
                        android:layout_width="44dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:gravity="center"
                        android:text="100%"
                        android:textColor="@color/on_surface"
                        android:textSize="12sp"
                        android:fontFamily="@font/misans" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/config_autosprint_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/autosprint_key_label"
                    android:textColor="@color/on_surface"
                    android:textSize="13sp"
                    android:fontFamily="@font/misans" />

                <Spinner
                    android:id="@+id/spinner_autosprint_key"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/bg_inbuilt_badge"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp" />

            </LinearLayout>

            <!-- Zoom Level -->
            <LinearLayout
                android:id="@+id/config_zoom_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zoom_level_label"
                    android:textColor="@color/on_surface"
                    android:textSize="13sp"
                    android:fontFamily="@font/misans" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <SeekBar
                        android:id="@+id/seekbar_zoom_level"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:min="0"
                        android:max="100"
                        android:progress="50"
                        android:progressTint="@color/primary"
                        android:thumbTint="@color/primary" />

                    <TextView
                        android:id="@+id/text_zoom_level"
                        android:layout_width="44dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:gravity="center"
                        android:text="50%"
                        android:textColor="@color/on_surface"
                        android:textSize="12sp"
                        android:fontFamily="@font/misans" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/zoom_keybind_label"
                    android:textColor="@color/on_surface"
                    android:textSize="13sp"
                    android:fontFamily="@font/misans" />

                <Button
                    android:id="@+id/btn_zoom_keybind"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/bg_inbuilt_badge"
                    android:text="C"
                    android:textColor="@color/on_surface"
                    android:textSize="13sp"
                    android:fontFamily="@font/misans"
                    android:textAllCaps="true" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/outline"
        android:alpha="0.3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:padding="12dp">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:minWidth="72dp"
            android:minHeight="0dp"
            android:backgroundTint="@color/surface"
            android:text="@string/dialog_negative_cancel"
            android:textColor="@color/on_surface"
            android:textSize="12sp"
            android:fontFamily="@font/misans"
            android:textAllCaps="false"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:minWidth="72dp"
            android:minHeight="0dp"
            android:backgroundTint="@color/primary"
            android:text="@string/save"
            android:textColor="@color/on_primary"
            android:textSize="12sp"
            android:fontFamily="@font/misans"
            android:textAllCaps="false" />

    </LinearLayout>
</LinearLayout>
